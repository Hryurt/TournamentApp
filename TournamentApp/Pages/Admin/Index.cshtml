@page
@model TournamentApp.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h1>Registrations</h1>

<p>
    <a class="btn btn-primary" role="button" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].DiscordId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].TeamCheck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].Game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].RulesCheck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Registration)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscordId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamCheck)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RulesCheck)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#logout').children().show();
            $('#logout').show();
        });
    </script>
}