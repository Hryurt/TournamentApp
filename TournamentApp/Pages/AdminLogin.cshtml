@page
@model TournamentApp.Pages.AdminLoginModel
@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}
<div class="container d-flex justify-content-center">
    <div class="col-md-6 mt-5">
        <form method="post">
            <div class="text-center">
                <h3 class="black-color">Admin Panel</h3>
                <p>@Model.Message</p>
            </div>
            <hr />
            <div class="form-group">
                <input type="text" class="form-control shadow-box" asp-for="UserName">
            </div>
            <div class="form-group">
                <input type="password" class="form-control shadow-box" asp-for="Password">
            </div>
            <button type="submit" class="btn btn-warning w-100 mb-2 shadow-box green-background black-color bold-special" id="submitButton">Giriş Yap</button>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#logout').children().hide();
            $('#logout').hide();
            $('.navbar-toggler').hide();
        });
    </script>
}